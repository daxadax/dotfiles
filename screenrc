startup_message off
defscrollback 5000
vbell off

# KEY BINDINGS
bindkey ^[[1;6D prev
bindkey ^[[1;6C next

# For RVM
shell -${SHELL}

# because this is so fucking obtuse...
# %-w:      display previous windows
# %{+b w}:  bold white
# [%n]:     display window number in brackets
# %t:       display title
# %+w       display consequent windows

hardstatus alwayslastline "%{=}%-w%{+b w}[%n] %t%{-b w}%+w %=%"
